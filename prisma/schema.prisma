generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Shop      Shop[]
}

model Shop {
  id         String     @id @default(cuid())
  name       String
  url        String
  secretName String
  type       String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  Product    Product[]
  Showcase   Showcase[]
  owner      User       @relation(fields: [ownerId], references: [id])
  ownerId    String
}

model Product {
  id          String @id @default(cuid())
  title       String
  handle      String
  description String
  image       String

  shop            Shop              @relation(fields: [shopId], references: [id])
  shopId          String
  Variants        Variant[]
  ShowcaseProduct ShowcaseProduct[]
}

model Variant {
  id   String @id @default(cuid())
  name String
  type String

  product   Product @relation(fields: [productId], references: [id])
  productId String
}

model Showcase {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shop            Shop              @relation(fields: [shopId], references: [id])
  shopId          String
  ShowcaseStat    ShowcaseStat[]
  ShowcaseProduct ShowcaseProduct[]
}

model ShowcaseProduct {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product    Product  @relation(fields: [productId], references: [id])
  productId  String
  showcase   Showcase @relation(fields: [showcaseId], references: [id])
  showcaseId String

  @@id([productId, showcaseId])
}

model ShowcaseStat {
  id               String   @id @default(cuid())
  referrerCastHash String
  referrerFid      String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  showcase   Showcase @relation(fields: [showcaseId], references: [id])
  showcaseId String
}
